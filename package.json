{
    "name": "splunkit",
    "displayName": "Splunkit",
    "description": "A splunk or spl formatter extension.",
    "version": "1.0.0",
    "publisher": "stuyk",
    "repository": "https://github.com/stuyk/splunkit",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "workspaceContains:**/*.spl"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.formatSPL",
                "title": "Format SPL"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "eslint": "^7.1.0",
        "typescript": "^4.0.2"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120,
        "semi": true,
        "singleQuote": true
    }
}
